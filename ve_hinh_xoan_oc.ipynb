   "source": [
    "import turtle\n",
    "t = turtle.Turtle()\n",
    "ban_kinh = int(input(\"Nhập bán kính hình xoắn ốc:\"))\n",
    "khoang_cach = 0\n",
    "i = 0\n",
    "while khoang_cach <= ban_kinh:\n",
    "    t.circle(10+i,35)\n",
    "    khoang_cach = turtle.distance(t)\n",
    "    i += 2\n",
    "turtle.done()\n"
   ]
